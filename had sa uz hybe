x = 2
y = 2
led.plot(x, y)
pausetime = 500
sensitivity = 200


ax = randint(0, 4)
ay = randint(0, 4)
led.toggle(ax, ay)

def on_forever():
    global x, y, ax, ay

    

    if input.acceleration(Dimension.X) > sensitivity:
        if x < 4:
            led.toggle(x, y)
            x = x + 1
            led.toggle(x, y)
            basic.pause(pausetime)
    elif input.acceleration(Dimension.X) < 0 - sensitivity:
        if x > 0:
            led.toggle(x, y)
            x = x - 1
            led.toggle(x, y)
            basic.pause(pausetime)
    if input.acceleration(Dimension.Y) > sensitivity:
        if y < 4:
            led.toggle(x, y)
            y = y + 1
            led.toggle(x, y)
            basic.pause(pausetime)
    elif input.acceleration(Dimension.Y) < 0 - sensitivity:
        if y > 0:
            led.toggle(x, y)
            y = y - 1
            led.toggle(x, y)
            basic.pause(pausetime)
    if x == ax and y == ay:
        led.toggle(ax, ay)
        ax = randint(0, 4)
        ay = randint(0, 4)
        led.toggle(ax, ay)
         
basic.forever(on_forever)

